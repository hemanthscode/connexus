# Connexus Development Environment Configuration

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# App Configuration
VITE_APP_NAME=Connexus
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Real-time Chat Application"

# Environment
VITE_NODE_ENV=development

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_MESSAGES=false
VITE_ENABLE_VIDEO_CALLS=false
VITE_ENABLE_SCREEN_SHARING=false

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# UI Configuration
VITE_MESSAGES_PER_PAGE=50
VITE_TYPING_TIMEOUT=3000
VITE_ONLINE_CHECK_INTERVAL=30000
VITE_RECONNECT_ATTEMPTS=5
VITE_RECONNECT_INTERVAL=2000

# Socket.IO Configuration
VITE_SOCKET_TRANSPORTS=websocket,polling
VITE_SOCKET_TIMEOUT=20000
VITE_SOCKET_FORCE_NEW=false

# Debug Configuration
VITE_DEBUG_MODE=true
VITE_SHOW_SOCKET_LOGS=true
VITE_SHOW_API_LOGS=true

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHER=true

# Performance Configuration
VITE_LAZY_LOAD_IMAGES=true
VITE_INFINITE_SCROLL=true
VITE_MESSAGE_CACHE_SIZE=1000
