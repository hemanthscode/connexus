# Connexus Production Environment Configuration

# Backend API Configuration (UPDATE THESE WITH YOUR PRODUCTION URLs)
VITE_API_BASE_URL=https://your-backend-domain.com/api
VITE_SOCKET_URL=https://your-backend-domain.com

# App Configuration
VITE_APP_NAME=Connexus
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Real-time Chat Application"

# Environment
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_MESSAGES=false
VITE_ENABLE_VIDEO_CALLS=false
VITE_ENABLE_SCREEN_SHARING=false

# Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf

# UI Configuration
VITE_MESSAGES_PER_PAGE=50
VITE_TYPING_TIMEOUT=3000
VITE_ONLINE_CHECK_INTERVAL=60000
VITE_RECONNECT_ATTEMPTS=3
VITE_RECONNECT_INTERVAL=5000

# Socket.IO Configuration
VITE_SOCKET_TRANSPORTS=websocket
VITE_SOCKET_TIMEOUT=10000
VITE_SOCKET_FORCE_NEW=false

# Debug Configuration
VITE_DEBUG_MODE=false
VITE_SHOW_SOCKET_LOGS=false
VITE_SHOW_API_LOGS=false

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHER=true

# Performance Configuration
VITE_LAZY_LOAD_IMAGES=true
VITE_INFINITE_SCROLL=true
VITE_MESSAGE_CACHE_SIZE=500
